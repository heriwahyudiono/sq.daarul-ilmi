<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts</title>
</head>
<body>

  <div style="display: flex;">
    <a href="/home">Home</a>
    <a href="/users">Users</a>
    <a href="/menu">Menu</a>  
  </div>

  <br>

  <a href="/create-post">Buat Postingan</a>

  <ul>
    <% posts.forEach(function(post) { %>
      <li style="list-style-type: none;">
        <p>Posted by: <%= post.user_name %></p>
        <p><%= post.caption %></p>
        <div>
          <!-- Bagian menampilkan foto -->
          <% post.photos.forEach(function(photo) { %>
            <img style="width: 500px;" src="/<%= photo.file_path %>" alt="<%= photo.file_path %>">
          <% }); %>
          
          <!-- Bagian menampilkan video -->
          <% post.videos.forEach(function(video) { %>
            <video style="width: 500px;" controls>
              <source src="/<%= video.file_path %>" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          <% }); %>
        </div>
      </li>
    <% }); %>    
  </ul> 
</body>
</html>
